{
  "compilerOptions": {
    "lib": ["dom", "esnext"],
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "noImplicitAny": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "website/admin/*",
        "website/guest/*",
        "website/owner/*"
      ]
    }
  },
}
